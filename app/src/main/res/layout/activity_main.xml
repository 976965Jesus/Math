<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/math1" />

    <TextView
        android:id="@+id/ma"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="163dp"
        android:text="MA"
        android:textSize="30dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/orange"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="155dp"
        android:layout_toRightOf="@id/ma"
        android:text="TH"
        android:textSize="30dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="250dp"
        android:background="@color/gray" />

    <EditText
        android:id="@+id/edt_usuario"
        android:layout_width="223dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/img_user"
        android:layout_marginLeft="-24dp"
        android:layout_marginTop="353dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Numero de cuenta"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18dp"
        android:textAlignment="center"
        android:inputType="number"
        android:background="@drawable/borde" />

    <TextView
        android:id="@+id/img_user"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="353dp"
        android:background="@drawable/borde" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/usuario2"
        android:layout_marginTop="361dp"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/edt_usuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_green"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:fontFamily="sans-serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="20dp"
        android:text="Â¿No tienes una cuenta?"
        android:textColor="@color/white"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/lbd_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="20dp"
        android:text="Resgistrarse"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:fontFamily="sans-serif-black"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>